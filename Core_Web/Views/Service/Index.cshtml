@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Listesi Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Görsel</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {


                <tr>
                    <th>@item.ServiceId</th>
                    <td class="budget">
                        @item.Title
                    </td>

                    <td>
                        <img src="@item.ImageUrl" width="96px" height="96px"/>
                    </td>
                    <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Sil <i class="bi bi-trash"></i></a></td>
                    <td><a href="/Service/EditService/@item.ServiceId" class="btn btn-outline-info">Güncelle <i class="bi bi-pen"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Service/AddService" class="btn btn-primary">Yeni Hizmet Ekle <i class="bi bi-plus-square"></i></a>
</div>

