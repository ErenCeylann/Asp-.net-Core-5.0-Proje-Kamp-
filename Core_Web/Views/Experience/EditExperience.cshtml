@model EntityLayer.Concrete.Experince
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.ExperinceId)
    <div class="form-group">
        @Html.LabelFor(Model=>Model.Name,new {@class="form-control"})
        @Html.TextBoxFor(Model=>Model.Name,new {@class="form-control"})

    </div>
    <div class="form-group">

        @Html.LabelFor(Model=>Model.Date,new {@class="form-control"})
        @Html.TextBoxFor(Model=>Model.Date,new {@class="form-control"})
    </div>
    <div class="form-group">

        @Html.LabelFor(Model=>Model.ImageUrl,new {@class="form-control"})
        @Html.TextBoxFor(Model=>Model.ImageUrl,new {@class="form-control"})
    </div>
    <div class="form-group">

        @Html.LabelFor(Model=>Model.Description,new {@class="form-control"})
        @Html.TextAreaFor(Model=>Model.Description,new {@class="form-control"})
    </div>
    <button class="btn btn-primary">Güncelle</button>
}



