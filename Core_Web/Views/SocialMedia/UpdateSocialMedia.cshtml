@model EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateSocialMedia", "SocialMedia", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.SocialMediaId)
    <div class="form-group">
        <label>Başlık</label>
        @Html.TextBoxFor(Model=>Model.Name,new {@class="form-control"})

    </div>
    <div class="form-group">

        <label>Url</label>
        @Html.TextBoxFor(Model=>Model.Url,new {@class="form-control"})
    </div>
    <div class="form-group">

        <label>İkon</label>
        @Html.TextBoxFor(Model=>Model.İcon,new {@class="form-control"})
    </div>
    <button class="btn btn-primary">Güncelle</button>
}

