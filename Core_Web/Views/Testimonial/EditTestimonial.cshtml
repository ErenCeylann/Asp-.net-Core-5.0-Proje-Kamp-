@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using (Html.BeginForm("EditTestimonial","Testimonial",FormMethod.Post))
{
@Html.HiddenFor(x=>x.TestimonialId)
<div class="form-group">
    <label>Ad-Soyad</label>
    @Html.TextBoxFor(Model=>Model.ClientName,new {@class="form-control"})

</div>
<div class="form-group">
    <label>Şirket</label>
    @Html.TextBoxFor(Model=>Model.Company,new {@class="form-control"})

</div>

<div class="form-group">
    <label>Yorum</label>
    @Html.TextAreaFor(Model=>Model.Comment,8,3,new {@class="form-control"})

</div>

<div class="form-group">

    <label>Görsel</label>
    @Html.TextBoxFor(Model=>Model.ImageUrl,new {@class="form-control"})
</div>
<br />
<button type="submit" class="btn btn-success">Güncelle</button>
}

