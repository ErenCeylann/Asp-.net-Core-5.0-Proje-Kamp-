@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.FeatureID)
    
    <div class="form-group">
        @Html.LabelFor(Model=>Model.Header,new {@class="form-control"})
        @Html.TextBoxFor(Model=>Model.Header,new {@class="form-control"})

    </div>
    <div class="form-group">

        @Html.LabelFor(Model=>Model.Name,new {@class="form-control"})
        @Html.TextBoxFor(Model=>Model.Name,new {@class="form-control"})
    </div>
    <div class="form-group">

        @Html.LabelFor(Model=>Model.Title,new {@class="form-control"})
        @Html.TextBoxFor(Model=>Model.Title,new {@class="form-control"})
    </div>
    <button class="btn btn-info">Güncelle</button>
}



