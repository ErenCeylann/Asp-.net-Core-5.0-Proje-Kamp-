@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@Html.HiddenFor(x=>x.WriterMessageID)
<div class="form-group">
   <label>Konu</label>
    @Html.TextBoxFor(Model=>Model.Subject,new {@class="form-control"})

</div>
<div class="form-group">
    <label>Gönderen</label>
    @Html.TextBoxFor(Model=>Model.SenderName,new {@class="form-control"})

</div>

<div class="form-group">
    <label>Alıcı</label>
    @Html.TextBoxFor(Model=>Model.ReceiverName,new {@class="form-control"})

</div>

<div class="form-group">

    <label>Tarih</label>
    @Html.TextBoxFor(Model=>Model.Date,new {@class="form-control"})
</div>
<div class="form-group">

    <label>Mesaj</label>
    @Html.TextAreaFor(Model=>Model.MessageContent,new {@class="form-control"})
</div>
<a asp-action="ReceiverMessageList" class="btn btn-primary mr-2">Admin Gelen Mesajlar</a>
<a asp-action="SenderMessageList" class="btn btn-warning mr-2">Admin Giden Mesajlar</a>

