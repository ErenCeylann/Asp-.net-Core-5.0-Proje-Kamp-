@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



@using (Html.BeginForm("AdminMessageSend", "AdminMessage", FormMethod.Post))
{
    <div class="form-group">
       <label>Konu</label>
        @Html.TextBoxFor(Model=>Model.Subject,new {@class="form-control"})

    </div>
    <div class="form-group">

        <label>Alıcı</label>
        @Html.TextBoxFor(Model=>Model.Receiver,new {@class="form-control"})
    </div>

    <div class="form-group">

        <label>Mesaj</label>
        @Html.TextAreaFor(Model=>Model.MessageContent,8,3,new {@class="form-control"})
    </div>

    <button class="btn btn-primary">Gönder</button>
}


