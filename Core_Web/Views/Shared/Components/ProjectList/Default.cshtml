@using EntityLayer.Concrete
@model List<Porfolio>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Status</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> Ana Görsel </th>
                                <th> Proje Adı </th>
                                <th> Url </th>
                                <th> Fiyat </th>
                                <th> Tamamlanma Oranı </th>
                                <th> Durum </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var x in Model)
                            {
                                <tr>
                                <td>@x.PortfolioId</td>
                                <td> <img src="@x.ImageUrl" alt="image" /></td>
                                <td> @x.Name </td>
                                <td> @x.ProjectUrl </td>
                                <td> @x.Price </td>
                                <td> %@x.Value </td>
                                <td>
                                    @if (x.Value>=85)
                                        {
                                            <div class="badge badge-outline-primary">Proje Bitmek Üzere</div>
                                        }
                                    @if (x.Value==100)
                                        {
                                            <div class="badge badge-outline-success">Proje Bitti</div>
                                        }
                                        @if(x.Value>50&&x.Value<85)
                                        {
                                            <div class="badge badge-outline-warning">Proje Yarıda</div>
                                        }
                                        @if(x.Value<50)
                                        {
                                            <div class="badge badge-outline-danger">Proje Başlangıçta</div>
                                        }

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>