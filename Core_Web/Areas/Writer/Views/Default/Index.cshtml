@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string renk = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık.</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            if (x.Status == "Yeni Yazı")
                            {
                                renk = "badge badge-danger";
                            }

                            if (x.Status == "Yeni Video")
                            {
                                renk = "badge badge-info";
                            }
                        <tr>
                            <th>@x.Id</th> 
                            <td>@x.Title</td>
                            <td>@(((DateTime)x.Date).ToString("dd-MMM-yyyy"))</td>
                            <td><label class="@renk">@x.Status</label></td>
                                <td><a href="/Writer/Default/AnnouncementDetails/@x.Id" class="btn btn-outline-primary">Detaylar</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

