@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="card" style="width: 18rem;">
    <div class="card-body">
       
        <h5 class="card-title">@Html.HiddenFor(x=>x.WriterMessageID,new { disabled = "disabled" })</h5>
        <h6 class="card-subtitle mb-2 text-muted">Gönderici Mail:@Html.TextBoxFor(x=>x.Sender,new { disabled = "disabled" })</h6>
        <h6 class="card-subtitle mb-2 text-muted">Alıcı Mail:@Html.TextBoxFor(x=>x.Receiver,new { disabled = "disabled" })</h6>
        <h6 class="card-subtitle mb-2 text-muted">Tarih:@Html.TextBoxFor(x=>x.Date,new { disabled = "disabled" })</h6>
        <h6 class="card-subtitle mb-2 text-muted">Gönderen Adı:@Html.TextBoxFor(x=>x.SenderName,new { disabled = "disabled" })</h6>
        <h6 class="card-subtitle mb-2 text-muted">Alıcı Adı:@Html.TextBoxFor(x=>x.ReceiverName,new { disabled = "disabled" })</h6>
        <p class="card-text">Mesaj:@Html.TextAreaFor(x=>x.MessageContent,13,30,new { disabled = "disabled" })</p>
    </div>
</div>


